{% extends 'base.html.twig' %}

{% block title %}Admin Products{% endblock %}

{% block body %}
    <style>
        .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
        }
        h5 {
            text-align: center;
            color: #ff6600;
        }
        .card {
            margin: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 200px;
            height: 250px;
            text-align: center;
            background-color: #f4f4f4;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-secondary, .btn-danger {
            background-color: #ff6600;
            color: white;
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 10px;
            display: block;
        }
        .btn-secondary:hover, .btn-danger:hover {
            background-color: #ff3300;
        }
        .btn-primary {
            background-color: black;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
            display: block;
            margin: 20px auto;
            font-size: 1.2em;
        }
        .btn-primary:hover {
            background-color: #ff6600;
            color: black;
        }
    </style>
    <body>
    <header>
        <h1 style="text-align: center;">Sanity Shop - Admin</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop Logo" class="banner">
        <h2 style="text-align: center;">Admin Products</h2>
        <a href="{{ path('app_admin_product_add') }}" class="btn-primary">Add New Product</a>
        <div class="products">
            {% for product in products %}
                <div class="card">
                    <h5>{{ product.name }}</h5>
                    <p>Price: â‚¬{{ product.price }}</p>
                    <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn-secondary">Edit</a>
                    <a href="{{ path('app_admin_product_delete', {id: product.id}) }}" class="btn-danger"
                       onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                </div>
            {% endfor %}
        </div>
    </main>
    </body>
{% endblock %}
