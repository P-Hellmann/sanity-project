{% extends 'base.html.twig' %}

{% block title %}Admin Products{% endblock %}

{% block body %}
    <style>
    .products {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }
    h5 {
        text-align: center;
    }
    .card {
        margin: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 200px;
        height: 250px;
        text-align: center;
    }
    </style>
    <body>
    <header>
        <h1>Sanity shop</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity shop logo" class="banner">
        <h2>Admin Products</h2>
        <div class="products">
            {% for product in products %}
                <div class="card">
                    <h5>{{ product.name }}</h5>
                    <p>Price: {{ product.price }}</p>
                    <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn-secondary">Edit</a>
                    <a href="{{ path('app_admin_product_delete', {id: product.id}) }}" class="btn-danger"
                       onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('app_admin_product_add') }}" class="btn-primary">Add New Product</a>
    </main>
    </body>
{% endblock %}
