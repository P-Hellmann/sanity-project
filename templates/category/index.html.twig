{% extends 'base.html.twig' %}

{% block title %}Haunted Categories - Sanity Shop{% endblock %}

{% block body %}
    <style>
        .categories {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        h5 {
            text-align: center;
            font-size: 1.2em;
            margin-bottom: 10px;
        }
        .card {
            background: black;
            color: white;
            border: 2px solid #ff6600;
            border-radius: 10px;
            width: 220px;
            height: 375px;
            text-align: center;
            padding: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(255, 102, 0, 0.8);
        }
        .btn-secondary {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background: #ff6600;
            color: black;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            transition: 0.3s;
        }
        .btn-secondary:hover {
            background: white;
            color: black;
        }
    </style>
    <body>
    <header>
        <h1 style="text-align: center;">Sanity Shop – Choose Your Curse... I Mean What Removes Your Curse</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop logo" class="banner">
        <h2 style="text-align: center;">Categories of the Supernatural</h2>
        <p style="text-align: center; font-size: 1.2em;">
            Looking for something specific? Whether you need <span style="color: #ff6600; font-weight: bold;">ghost-banishing gear</span>
            or <span style="color: #ff6600; font-weight: bold;">a cursed artifact (for educational purposes, of course)</span>,
            we’ve got the right category for you!
        </p>

        <div class="categories">
            {% for category in categories %}
                <div class="card">
                    <h5>{{ category.name }}</h5>
                    <p>{{ category.description }}</p>
                    <a href="{{ path('app_category_show', {id: category.id}) }}" class="btn-secondary">Browse</a>
                </div>
            {% endfor %}
        </div>
    </main>
    </body>
{% endblock %}
