{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Sanity Shop{% endblock %}

{% block body %}
    <style>
        .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        h2 {
            text-align: center;
            font-size: 2em;
            margin-bottom: 20px;
        }
        h5 {
            font-size: 1.3em;
            margin-bottom: 10px;
        }
        .card {
            background: black;
            color: white;
            border: 2px solid #ff6600;
            border-radius: 10px;
            width: 220px;
            height: 270px;
            text-align: center;
            padding: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(255, 102, 0, 0.8);
        }
        .btn-secondary {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background: #ff6600;
            color: black;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            transition: 0.3s;
        }
        .btn-secondary:hover {
            background: white;
            color: black;
        }
    </style>
    <body>
    <header>
        <h1 style="text-align: center;">Sanity Shop â€“ Your Supernatural Marketplace</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop logo" class="banner">
        <h2>{{ category.name }} (AKA Your Portal to the Unknown)</h2>
        <p style="text-align: center; font-size: 1.2em;">
            Welcome to the <span style="color: #ff6600; font-weight: bold;">{{ category.name|lower }}</span> section!
            Whether you're after a cursed relic, enchanted salt, or a high-tech ghost trap, you're in the right place.
        </p>

        <div class="products">
            {% for product in products %}
                <div class="card">
                    <h5>{{ product.name }}</h5>
                    <p>Price: {{ product.price }}</p>
                    <p>Warning: May attract ghosts or curses.</p>
                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn-secondary">View (At Your Own Risk)</a>
                </div>
            {% endfor %}
        </div>
    </main>
    </body>
{% endblock %}
