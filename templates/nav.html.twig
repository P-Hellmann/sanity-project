<style>
    nav {
        position: sticky;
        display: flex;
        justify-content: space-between;
        background-color: black;
        padding: 15px 20px;
        top: 0;
        z-index: 100;
        font-family: Arial, sans-serif;
    }

    .left-wrapper,
    .right-wrapper {
        display: flex;
        gap: 20px;
    }

    a {
        text-decoration: none;
        color: white;
        padding: 12px;
        font-size: 1.1em;
        border-radius: 5px;
        transition: 0.3s;
    }

    a:hover {
        background-color: #ff6600;
        color: black;
    }

    .cart-icon {
        width: 24px;
        height: 24px;
    }

    .badge {
        background-color: #ff6600;
        color: black;
        padding: 4px 8px;
        border-radius: 12px;
    }

    .logout-btn,
    .register-btn,
    .login-btn {
        background-color: #ff6600;
        border-radius: 5px;
        color: black;
        padding: 12px 20px;
        font-size: 1.1em;
        transition: background-color 0.3s ease;
    }

    .logout-btn:hover,
    .register-btn:hover,
    .login-btn:hover {
        background-color: #cc5200;
    }
</style>

<nav>
    <div class="left-wrapper">
        <a href="/" class="home-btn">Home</a>
        <a href="/about" class="about-btn">About</a>
        <a href="/contact" class="contact-btn">Contact</a>
        <a href="/categories" class="categories-btn">Categories</a>
    </div>
    <div class="right-wrapper">
        <a href="/cart" class="cart-btn">
            <img src="{{ asset('images/cart.png') }}" class="cart-icon">
            <span class="badge cart-item-counter">{{ app.session.get("amountOfItems", 0) }}</span>
        </a>
        {% if app.user %}
            <a href="{{ path('app_orders') }}" class="orders-btn">Orders</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin') }}" class="admin-btn">Admin</a>
            {% endif %}
        {% endif %}
        {% if app.user %}
            <a href="/logout" class="logout-btn">Logout</a>
        {% else %}
            <a href="/register" class="register-btn">Register</a>
            <a href="/login" class="login-btn">Login</a>
        {% endif %}
    </div>
</nav>
