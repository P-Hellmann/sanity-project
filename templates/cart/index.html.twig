{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <style>
        .cart {
            list-style: none;
            padding: 0;
        }
        td {
            padding: 5px;
            border: 1px solid #ccc;
            text-align: center;
        }
        th {
            padding: 5px;
            border: 1px solid #ccc;
            text-align: center;
        }
    </style>
    <body>
    <header>
        <h1>Sanity shop</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop Logo" class="banner">
        <h2>Shopping Cart</h2>

        <section class="cart">
            {% if items %}
                <table>
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Remove</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.product_name }}</td>
                            <td>x{{ item.quantity }}</td>
                            <td>${{ item.price | number_format(2) }}</td>
                            <td><a href="{{ path('app_cart_remove', {'id': item.product_id}) }}" class="text-secondary">X</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="2"><strong>Total:</strong></td>
                        <td><strong>${{ shoppingCart.total | number_format(2) }}</strong></td>
                    </tr>
                    </tfoot>
                </table>
            {% else %}
                <p>Your cart is empty.</p>
            {% endif %}
            <a href="{{ path('app_categories') }}" class="btn btn-primary">Continue Shopping</a>
            <a href="{{ path('app_checkout') }}" class="btn btn-success">Checkout</a>
        </section>
    </main>

    </body>
{% endblock %}
