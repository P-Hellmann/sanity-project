{% extends 'base.html.twig' %}

{% block title %}Thank You - Sanity Shop{% endblock %}

{% block body %}
    <style>
        main {
            height: fit-content !important;
            background: #111;
            color: white;
            padding: 30px 0;
        }
        .thank-you-section {
            background: #333;
            padding: 20px;
            border: 2px solid #ff6600;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        h2 {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #ff6600;
        }
        h5 {
            margin-top: 15px;
            font-size: 1.3em;
        }
        p {
            font-size: 1.1em;
            margin: 5px 0;
        }
        .btn-primary {
            background: #ff6600;
            color: black;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            padding: 12px 20px;
            display: block;
            width: 100%;
            text-align: center;
            transition: 0.3s;
        }
        .btn-primary:hover {
            background: white;
            color: black;
        }
    </style>
    <body>
    <header>
        <h1 style="text-align: center;">Sanity Shop – Your Order Has Been Summoned!</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop Logo" class="banner" style="display: block; margin: 0 auto;">
        <h2 style="text-align: center;">Thank You for Your Order – It’s on Its Way... Maybe</h2>

        <div class="thank-you-section">
            <p style="text-align: center;">We’ve received your order and it’s currently being processed. Prepare yourself—something mysterious may be arriving soon!</p>

            <strong>Order Information:</strong><br><br>
            <p><strong>First Name:</strong> {{ order.firstName }}</p>
            <p><strong>Last Name:</strong> {{ order.lastName }}</p>
            <p><strong>Email:</strong> {{ order.email }}</p>
            <p><strong>Address:</strong> {{ order.address }}</p>
            <p><strong>Phone:</strong> 0{{ order.phone }}</p>
            <p><strong>Total Price:</strong> ${{ order.totalPrice }}</p>

            <h5>Items in Your Order (Consider Yourself Haunted):</h5>
            {% for item in order.items['items'] %}
                <p>- {{ item.product_name }} - ${{ item.price }} x {{ item.quantity }}</p>
            {% endfor %}
        </div>

        <br>
        <a href="{{ path('app_categories') }}" class="btn-primary">Back to Shop (Before Your Order Arrives)</a>
    </main>
    </body>
{% endblock %}
