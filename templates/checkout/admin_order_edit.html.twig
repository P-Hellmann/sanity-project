{% extends 'base.html.twig' %}

{% block title %}Admin Order Edit{% endblock %}

{% block body %}
    <style>
        main {
            height: fit-content !important;
        }
    </style>
    <body>
    <header>
        <h1>Sanity shop</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop Logo" class="banner">
        <h2>All Orders</h2>
        <section>
            {{ form_start(form) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.address) }}
            {{ form_row(form.city) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.comments) }}
            {{ form_row(form.items) }}
            {{ form_row(form.dateoforder) }}
            {{ form_errors(form.user) }}
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </section>
        <br>
        <a href="{{ path('app_admin') }}" class="btn-primary">Back to Dashboard</a>
    </main>
    </body>
{% endblock %}
