{% extends 'base.html.twig' %}

{% block title %}Admin Orders{% endblock %}

{% block body %}
    <style>
        main {
            height: fit-content !important;
        }
        .orders {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
        }
        order-card {
            width: 300px;
            border: 1px solid black;
            padding: 10px;
            margin: 10px;
        }
    </style>
    <body>
    <header>
        <h1>Sanity shop</h1>
    </header>
    <main>
        <img src="{{ asset('images/logo.png') }}" alt="Sanity Shop Logo" class="banner">
        <h2>All Orders</h2>
        <section class="orders">
            {% for order in orders %}
                <div class="order-card">
                    <strong>Order Information (Order #{{ order.id }}):</strong><br><br>
                    <p><strong>First Name:</strong> {{ order.firstName }}</p>
                    <p><strong>Last Name:</strong> {{ order.lastName }}</p>
                    <p><strong>Email:</strong> {{ order.email }}</p>
                    <p><strong>Address:</strong> {{ order.address }}</p>
                    <p><strong>Phone:</strong> {{ order.phone }}</p>
                    <p><strong>Total Price:</strong> ${{ order.totalPrice }}</p>
                    <h5>Items:</h5>
                    <ul>
                        {% for item in order.items['items'] %}
                            <li>{{ item.product_name }} - ${{ item.price }} x {{ item.quantity }}</li>
                        {% endfor %}
                    </ul>
                    <div class="order-actions">
                        <a href="{{ path('app_admin_orders_edit', { id: order.id }) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('app_admin_orders_delete', { id: order.id }) }}" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                    </div>
                </div>
                <br>
            {% endfor %}
        </section>
        <br>
        <a href="{{ path('app_admin') }}" class="btn-primary">Back to Dashboard</a>
    </main>
    </body>
{% endblock %}
